---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../shared/Header.astro";
import Footer from "../shared/Footer.astro";
import ContactModal from "../shared/ContactModal.astro";

import SectionHero from "../sections/SectionHero.astro";
import SectionModulo2_Carousel from "../sections/SectionModulo2_Carousel.astro";
---

<MainLayout title="LeoStock77 — Inicio">
  <Header slot="header" />

  <!-- OJO: MainLayout ya tiene <main>, así que aquí usamos un div -->
  <div class="main-content">
    <SectionHero />
    <SectionModulo2_Carousel />

    <!-- Más placeholders... -->
  </div>

  <!-- IMPORTANTE: el modal debe existir en el DOM -->
  <ContactModal />

  <Footer slot="footer" />
</MainLayout>

<style>
  .main-content {
    width: 100%;
  }
</style>
